<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             x:Class="LibraryApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainBackgroundColor">#004777</Color>
            <Color x:Key="HeadingTextColor">White</Color>
            <Color x:Key="NormalTextColor">White</Color>
            <Color x:Key="ButtonTextColor">White</Color>
            <Style x:Key="LabelHeadingStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Helvetica"/>
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style x:Key="NormalTextStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Helvetica"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>